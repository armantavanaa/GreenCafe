<!DOCTYPE html>
<html>
  <head>
    <style>
      .content {
            font-family: "Helvetica",sans-serif;
            width: 94%;
            margin: 4em auto;
            font-size: 20px;
            line-height: 30px;
            text-align: justify;
      }
      .flip-card {
        font-family: "American Typewriter",serif;
        font-weight: lighter;
        background-color: transparent;
        float: left;
        padding: 5px;
        margin: 23px;
        width: 400px;
        height: 400px;
        border: 1px solid #f1f1f1;
        perspective: 1000px; /* Remove this if you don't want the 3D effect */
      }

      /* This container is needed to position the front and back side */
      .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.8s;
        transform-style: preserve-3d;
      }

      /* Do an horizontal flip when you move the mouse over the flip box container */
      .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
      }

      /* Position the front and back side */
      .flip-card-front, .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        -webkit-backface-visibility: hidden; /* Safari */
        backface-visibility: hidden;
      }

      /* Style the front side (fallback if image is missing) */
      .flip-card-front {
        font-weight: bold;
        background-color: #5A2700;
        color:  #556B2F;
      }


      /* Style the back side */
      .flip-card-back {

        background-color:  #556B2F;
        color: white;
        transform: rotateY(180deg);
      }
      .flip-card-front p{
        margin-top: 170px;
      }
      .flip-card-back p{
        text-align: left;
        padding: 10;
        margin: 10px;
        font-family: "Helvetica",sans-serif;
      }
    </style>
  </head>
  <%- include('../head'); -%>
  <%- include('../navbar'); -%>
  <body>
    <main>
        <div class="content">
           <%_ for (const menu of menus) { -%>
             <div class="flip-card">
             <div class="flip-card-inner">
              <div class="flip-card-front">
                <p><%= menu.date.toDateString() -%></p>
              </div>
              <div id="<%= menu.id -%>" class="flip-card-back">
                <p>Main: <%= menu.main -%></p>
                <p>Side: <%= menu.side -%></p>
                <p>Salad: <%= menu.salad -%></p>
                <p>Drink: <%= menu.drink -%></p>
                <p>Dessert: <%= menu.dessert -%></p>
                <%_ if (admin) { -%>
                  <button class="delete btn btn-info"><i class="fa fa-trash"></i>Delete</button>
                <%_ } -%>
              </div>
             </div>
            </div>
           <%_ } -%>
     </div>
    </main>
    <script>
    $('.delete').on('click', function(event) {
      event.preventDefault();
      const id = $(this).parent().attr("id");
      $.ajax({method: 'delete', url: `/menus/${id}`})
        .done(() => window.location.reload())
        .fail(error => alert(error.responseText));
    });
    </script>
  </body>
</html>
